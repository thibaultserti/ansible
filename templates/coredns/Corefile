ayanides.cloud:53 {
    file /etc/coredns/zones/ayanides.cloud.zone ayanides.cloud
    log
    errors
    header {
        response set ra # set RecursionAvailable flag
    }
}
168.192.in-addr.arpa:53 {
    file /etc/coredns/zones/reverse-ayanides.cloud.zone 168.192.in-addr.arpa.
    log
    errors
}

.:53 {
    log
    errors
    forward . 8.8.8.8 8.8.4.4
    cache
}